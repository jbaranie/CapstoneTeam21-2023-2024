    <PreferenceCategory android:title="API's" app:iconSpaceReserved="false">
        <ListPreference android:persistent="false" android:entries="@array/dev_conf_api_endpoint_values" android:title="Main API" android:key="pref_key_action_api_main" android:defaultValue="@string/dev_conf_api_backend_production" android:entryValues="@array/dev_conf_api_endpoint_values" app:iconSpaceReserved="false" />
        <ListPreference android:persistent="false" android:entries="@array/dev_conf_api_endpoint_values" android:title="Routing API" android:key="pref_key_action_api_routing" android:defaultValue="@string/dev_conf_api_backend_production" android:entryValues="@array/dev_conf_api_endpoint_values" app:iconSpaceReserved="false" />
        <EditTextPreference android:persistent="true" android:title="Branch Name" android:key="@string/app_pref_key_api_branch_name" android:defaultValue="" app:iconSpaceReserved="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Other" app:iconSpaceReserved="false">
        <ListPreference android:persistent="false" android:title="MapBox style" android:key="pref_key_action_mapbox_style" app:iconSpaceReserved="false" />
