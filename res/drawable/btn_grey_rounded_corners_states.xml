<?xml version="1.0" encoding="utf-8"?>
<selector android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_grey_pressed" />
            <corners android:radius="2.0dip" />
            <stroke android:width="0.5dip" android:color="@color/white" />
            <padding android:left="@dimen/button_padding" android:right="@dimen/button_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_grey_normal" />
            <corners android:radius="2.0dip" />
            <stroke android:width="0.5dip" android:color="@color/white" />
            <padding android:left="@dimen/button_padding" android:right="@dimen/button_padding" />
        </shape>
    </item>
</selector>