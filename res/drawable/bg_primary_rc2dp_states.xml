    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_disabled" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/btn_white_ripple">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>