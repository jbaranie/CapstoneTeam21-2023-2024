<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/white"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center" android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="36.0dip" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_green_disabled" />
                    <corners android:radius="36.0dip" />
                    <padding android:left="@dimen/button_padding" android:right="@dimen/button_padding" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_on_dark" />
                    <corners android:radius="36.0dip" />
                    <padding android:left="@dimen/button_padding" android:right="@dimen/button_padding" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>