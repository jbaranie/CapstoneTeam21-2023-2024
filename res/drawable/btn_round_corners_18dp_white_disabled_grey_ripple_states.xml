<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/disabled_grey"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_green_disabled" />
                    <corners android:radius="18.0dip" />
                    <padding android:left="@dimen/button_padding" android:right="@dimen/button_padding" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="18.0dip" />
                    <padding android:left="@dimen/button_padding" android:right="@dimen/button_padding" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>