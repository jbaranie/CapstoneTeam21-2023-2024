<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/btn_white_ripple"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_white_disabled" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_white_selected" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_white_normal" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>